<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.netclipper.cryptoGriffin" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="connectivity">
        <param name="android-package" value="com.appfeel.cordova.connectivity.Connectivity" />
    </feature>
    <feature name="AdMobAds">
        <param name="android-package" value="com.appfeel.cordova.admob.AdMobAds" />
    </feature>
    <icon density="ldpi" src="www/res/icons/android/icon-36-ldpi.png" />
    <icon density="mdpi" src="www/res/icons/android/icon-48-mdpi.png" />
    <icon density="hdpi" src="www/res/icons/android/icon-72-hdpi.png" />
    <icon density="xhdpi" src="www/res/icons/android/icon-96-xhdpi.png" />
    <icon density="xxhdpi" src="www/res/icons/android/icon-144-xxhdpi.png" />
    <icon density="xxxhdpi" src="www/res/icons/android/icon-192-xxxhdpi.png" />
    <allow-intent href="market:*" />
    <name>cryptoGriffin</name>
    <description>
        A cryptographical tool to scramble text messages.
    </description>
    <author email="adnan.akgun@netclipper.co.uk" href="http://www.netclipper.co.uk">
        Adnan Akgun - Netclippper IT Solutions
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <icon src="icon.png" />
    <splash src="www/splash.png" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
