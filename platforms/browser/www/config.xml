<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.netclipper.cryptoGriffin" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>cryptoGriffin</name>
    <description>
        A cryptographical tool to scramble text messages.
    </description>
    <author email="adnan.akgun@netclipper.co.uk" href="http://www.netclipper.co.uk">
        Adnan Akgun - Netclippper IT Solutions
    </author>
    <content src="index.html" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="5.1.12" />
    <icon src="icon.png" />
    <splash src="www/splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
</widget>
